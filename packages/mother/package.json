{
	"name": "@mariozechner/pi-mother",
	"version": "0.51.6",
	"description": "Discord bot that delegates messages to the pi coding agent",
	"type": "module",
	"bin": {
		"mother": "dist/main.js"
	},
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"files": [
		"dist",
		"CHANGELOG.md"
	],
	"scripts": {
		"clean": "rm -rf dist",
		"build": "tsgo -p tsconfig.build.json && chmod +x dist/main.js",
		"dev": "tsgo -p tsconfig.build.json --watch --preserveWatchOutput",
		"test": "vitest run",
		"prepublishOnly": "npm run clean && npm run build"
	},
	"dependencies": {
		"@mariozechner/pi-agent-core": "^0.51.6",
		"@mariozechner/pi-ai": "^0.51.6",
		"@mariozechner/pi-coding-agent": "^0.51.6",
		"@sinclair/typebox": "^0.34.0",
		"chalk": "^5.6.2",
		"croner": "^9.1.0",
		"diff": "^8.0.2",
		"discord.js": "^14.16.0"
	},
	"devDependencies": {
		"@types/diff": "^7.0.2",
		"@types/node": "^24.3.0",
		"typescript": "^5.7.3",
		"vitest": "^3.2.1"
	},
	"keywords": [
		"discord",
		"bot",
		"ai",
		"agent"
	],
	"author": "Mario Zechner",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/badlogic/pi-mono.git",
		"directory": "packages/mother"
	},
	"engines": {
		"node": ">=20.0.0"
	}
}
